                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <WrapPanel
                        x:Name="EditPanel"
                        Width="940"
                        Height="419"
                        Background="{StaticResource DefaultBackground}"
