                        Canvas.Top="194"
                        Width="190"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap" />

                    <bdgr:MetroLabel
                        x:Name="ColumnNameLabel"
                        Canvas.Left="585"
                        Canvas.Top="241"
                        Width="115"
                        Height="26"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Column Name"
                        Foreground="{StaticResource BorderBrush}" />

                    <bdgr:MetroTextBox
                        x:Name="ColumnNameTextBox"
                        Canvas.Left="585"
                        Canvas.Top="269"
                        Width="190"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap" />

                    <bdgr:MetroLabel
                        x:Name="DataTypeLabel"
                        Canvas.Left="585"
                        Canvas.Top="323"
                        Width="70"
                        Height="26"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Panel.ZIndex="-3"
                        Content="Data Type"
                        Foreground="{StaticResource BorderBrush}" />

                    <bdgr:MetroComboBox
                        x:Name="ProviderComboBox"
                        Canvas.Left="85"
                        Canvas.Top="98"
                        Width="200"
                        Height="30"
                        Padding="1,1,1,1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        AllowMultiSelect="True"
                        DefaultText="Select Provider"
                        Foreground="{StaticResource WhiteForeground}">

                        <bdgr:MetroComboBoxItem
                            Background="{StaticResource ControlInterior}"
                            Content="SQLite"
                            Tag="SQLite" />

                        <bdgr:MetroComboBoxItem
                            AllowDrop="True"
                            Background="{StaticResource ControlInterior}"
                            Content="SQL Server"
                            Tag="SqlServer" />

                        <bdgr:MetroComboBoxItem
                            Background="{StaticResource ControlInterior}"
                            Content="Access"
                            Tag="Access" />

                        <bdgr:MetroComboBoxItem
                            Background="{StaticResource ControlInterior}"
                            Content="SQL CE"
                            Tag="SqlCe" />

                    </bdgr:MetroComboBox>

                    <bdgr:MetroLabel
                        x:Name="ProviderComboBoxLabel"
                        Canvas.Left="86"
                        Canvas.Top="68"
                        Padding="1,5,5,5"
                        Content="Database:" />
                </Canvas>
            </TabItem>

            <TabItem
                x:Name="SqlTab"
                Width="100"
                Height="24"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="{StaticResource DefaultBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="SQL">
                <Canvas
                    x:Name="SqlCanvas"
                    Background="{StaticResource DefaultBackground}">
                    <sync:EditControl
                        x:Name="Editor"
                        Canvas.Left="23"
                        Canvas.Top="76"
                        Width="990"
                        Height="387"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{StaticResource ControlInterior}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1"
                        CaretBrush="#FFEEFB00"
                        FontFamily="Source Code Pro"
                        Foreground="{StaticResource FormForeground}"
                        LineNumberAreaBackground="Black"
                        LineNumberAreaWidth="10"
                        LineNumberTextForeground="#FF1FB70A"
                        OutliningAreaWidth="3"
                        SelectionBackground="{StaticResource ControlHoverBrush}"
                        Text="Edit Control" />
                </Canvas>
            </TabItem>
            <TabItem
                x:Name="BusyTab"
                Width="100"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="{StaticResource DefaultBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Busy"
                IsSelected="False">
                <Canvas
                    x:Name="BusyTabCanvas"
                    Background="{StaticResource DefaultBackground}">
                    <Image
                        x:Name="PictureBox"
                        Canvas.Left="11"
                        Canvas.Top="6"
                        Width="1002"
                        Height="601"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        gif:AnimationBehavior.SourceUri="/Resources/Assets/LoaderImages/Loading.gif"
                        Stretch="UniformToFill" />
                </Canvas>
            </TabItem>
        </bdgr:MetroTabControl>

        <bdgr:MetroTabControl
            x:Name="SecondaryTabControl"
            Canvas.Left="1065"
            Canvas.Top="8"
            Width="280"
            Height="644"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <TabItem
                x:Name="SourceTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="{StaticResource DefaultBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Source"
                IsSelected="True">

                <Canvas
                    x:Name="SourceCanvas"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultBackground}">

                    <bdgr:MetroListBox
                        x:Name="DataSourceListBox"
                        Canvas.Left="21"
                        Canvas.Top="89"
                        Width="224"
                        Height="378"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="{StaticResource ControlBackColor}" />

                    <bdgr:MetroComboBox
                        x:Name="TableComboBox"
                        Canvas.Left="21"
                        Canvas.Top="42"
                        Width="222"
                        Height="30"
                        Padding="30,1,1,1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AllowMultiSelect="False"
                        Background="{StaticResource ControlInterior}"
                        DefaultText="Select Model Type">

                        <bdgr:MetroComboBoxItem
                            Padding="30,1,1,1"
                            Background="{StaticResource ControlInterior}"
                            Content="Execution"
                            Foreground="{StaticResource LightBlueBrush}"
                            Tag="EXECUTION" />

                        <bdgr:MetroComboBoxItem
                            Padding="30,1,1,1"
                            Background="{StaticResource ControlInterior}"
                            Content="Reference"
                            Foreground="{StaticResource LightBlueBrush}"
                            Tag="REFERENCE" />

                        <bdgr:MetroComboBoxItem
                            Padding="30,1,1,1"
                            Background="{StaticResource ControlInterior}"
                            Content="Maintenance"
                            Foreground="{StaticResource LightBlueBrush}"
                            Tag="MAINTENANCE" />

                    </bdgr:MetroComboBox>

                </Canvas>
            </TabItem>

            <TabItem
                x:Name="FilterTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="{StaticResource DefaultBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Filter"
                IsSelected="True">
                <Canvas
                    x:Name="FilterGrid"
                    Height="622"
                    Margin="0,0,23,0">
                    <bdgr:MetroListBox
                        x:Name="FirstListBox"
                        Canvas.Left="23"
                        Canvas.Top="84"
                        Width="200"
                        Height="140"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden" />

                    <bdgr:MetroComboBox
                        x:Name="FirstComboBox"
                        Canvas.Left="23"
                        Canvas.Top="34"
                        Width="200"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AllowMultiSelect="True"
                        DefaultText="ComboBox Items">
                        <sync:ComboBoxItemAdv Content="Item 1" />
                        <sync:ComboBoxItemAdv Content="Item 2" />
                        <sync:ComboBoxItemAdv Content="Item 3" />
                        <sync:ComboBoxItemAdv Content="Item 4" />
                        <sync:ComboBoxItemAdv Content="Item 5" />
                    </bdgr:MetroComboBox>

                    <bdgr:MetroComboBox
                        x:Name="SecondComboBox"
                        Canvas.Left="23"
                        Canvas.Top="264"
                        Width="200"
                        Height="30"
                        AllowMultiSelect="True"
                        DefaultText="ComboBox Items">
                        <sync:ComboBoxItemAdv Content="Item 1" />
                        <sync:ComboBoxItemAdv Content="Item 2" />
                        <sync:ComboBoxItemAdv Content="Item 3" />
                        <sync:ComboBoxItemAdv Content="Item 4" />
                        <sync:ComboBoxItemAdv Content="Item 5" />
                    </bdgr:MetroComboBox>

                    <bdgr:MetroListBox
                        x:Name="SecondListBox"
                        Canvas.Left="23"
                        Canvas.Top="311"
                        Width="200"
                        Height="163"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden" />
                </Canvas>
            </TabItem>

            <TabItem
                x:Name="CommandTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="{StaticResource DefaultBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="SQL">
                <Canvas
                    x:Name="CommandCanvas"
                    Height="576"
                    Margin="0,0,25,0"
                    Background="{StaticResource DefaultBackground}">

                    <bdgr:MetroLabel
                        x:Name="CommandLabel"
                        Canvas.Left="28"
                        Canvas.Top="35"
                        Width="170"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="SQL Commands:"
                        Foreground="{StaticResource BorderBrush}" />

                    <bdgr:MetroComboBox
                        x:Name="CommandComboBox"
                        Canvas.Left="27"
                        Canvas.Top="66"
                        Width="200"
                        Height="30"
                        AllowMultiSelect="True"
                        DefaultText="">
                        <sync:ComboBoxItemAdv Content="Item 1" />
                        <sync:ComboBoxItemAdv Content="Item 2" />
                        <sync:ComboBoxItemAdv Content="Item 3" />
                        <sync:ComboBoxItemAdv Content="Item 4" />
                        <sync:ComboBoxItemAdv Content="Item 5" />
                    </bdgr:MetroComboBox>

                    <bdgr:MetroListBox
                        x:Name="CommandListBox"
                        Canvas.Left="27"
                        Canvas.Top="115"
                        Width="200"
                        Height="340"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ToolTip="Select SQL Command" />
                </Canvas>
            </TabItem>

            <TabItem
                x:Name="CalendarTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="{StaticResource DefaultBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Dates"
                IsSelected="False">
                <Canvas
                    x:Name="CalendarCanvas"
                    Margin="0,5,0,0"
                    Background="{StaticResource DefaultBackground}">
                    <bdgr:MetroLabel
                        x:Name="FirstCalendarLabel"
                        Canvas.Left="27"
                        Canvas.Top="10"
                        Width="235"
                        Height="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Content="First"
                        Foreground="{StaticResource BorderBrush}" />
                    <bdgr:MetroLabel
                        x:Name="SecondCalendarLabel"
                        Canvas.Left="30"
                        Canvas.Top="245"
                        Width="240"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Second"
                        Foreground="{StaticResource BorderBrush}" />
                    <bdgr:MetroCalendar
                        x:Name="FirstCalendar"
                        Canvas.Left="14"
                        Canvas.Top="39"
                        Width="248"
                        Height="184"
                        MinWidth="0"
                        MinHeight="0"
