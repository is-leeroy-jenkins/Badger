                        Canvas.Left="365"
                        Canvas.Top="344"
                        Width="90"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Header="" />

                    <bdgr:MetroTile
                        x:Name="AddColumnButton"
                        Title="Add Column"
                        Canvas.Left="365"
                        Canvas.Top="429"
                        Width="90"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Header="" />

                    <bdgr:MetroListBox
                        x:Name="DataTypeListBox"
                        Canvas.Left="580"
                        Canvas.Top="354"
                        Width="200"
                        Height="110"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}" />

                    <bdgr:MetroLabel
                        x:Name="TableNameLabel"
                        Canvas.Left="585"
                        Canvas.Top="164"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Table Name"
