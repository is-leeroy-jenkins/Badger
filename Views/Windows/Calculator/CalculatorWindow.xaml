<Window
    x:Class="Badger.CalculatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:bdgr="clr-namespace:Badger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CalculationView"
    Title="Calculator"
    Width="410"
    Height="460"
    sync:SfSkinManager.Theme="{skin:SkinManagerExtension ThemeName=FluentDark}"
    Background="Black"
    BorderBrush="#FF0078D4"
    BorderThickness="1,1,1,1"
    FontSize="9"
    Foreground="#FFC5D1DA"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

<!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="BorderThickness" Value="1,1,1,1" />
            <Setter Property="BorderBrush" Value="#0078D4" />
            <Setter Property="Background" Value="#FF000000" />
            <Setter Property="Foreground" Value="#FFA0BDFC"/>
        </Style>
    </Window.Resources>

    <!--  ********************************    Calculator   ********************************************  -->

    <Canvas>
        <bdgr:MetroCalculator
            x:Name="Device"
            Canvas.Left="10"
            Canvas.Top="45"
            Width="380"
            Height="393"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Black"
            BorderBrush="Black"
            Foreground="#FF3399E8" />
        <Image
            x:Name="PictureBox"
            Canvas.Left="11"
            Canvas.Top="7"
            Width="98"
            Height="28"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Resources/Assets/FormImages/Main.png"
            ToolTip="Click for Windows 10 Calculator" />
        <Image
            x:Name="CloseButton"
            Canvas.Left="365"
            Canvas.Top="12"
            Width="22"
            Height="24"
            Source="/Resources/Assets/InterfaceImages/Cancel.png"
            ToolTip="Close Calculator" />
    </Canvas>
</Window>