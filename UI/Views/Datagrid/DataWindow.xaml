                        Canvas.Left="365"
                        Canvas.Top="344"
                        Width="90"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Header="" />

                    <bdgr:MetroTile
                        x:Name="AddColumnButton"
                        Title="Add Column"
                        Canvas.Left="365"
                        Canvas.Top="429"
                        Width="90"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Header="" />

                    <bdgr:MetroListBox
                        x:Name="DataTypeListBox"
