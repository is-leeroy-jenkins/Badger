                    <bdgr:MetroLabel
                        x:Name="FirstGridLabel"
                        Canvas.Left="16"
                        Canvas.Top="474"
                        Width="210"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="MetroLabel" />

                    <bdgr:MetroLabel
                        x:Name="SecondGridLabel"
                        Canvas.Left="278"
                        Canvas.Top="474"
                        Width="210"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="MetroLabel" />

                    <bdgr:MetroLabel
                        x:Name="ThirdGridLabel"
                        Canvas.Left="533"
                        Canvas.Top="474"
                        Width="210"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="MetroLabel" />

                    <bdgr:MetroLabel
                        x:Name="FourthGridLabel"
                        Canvas.Left="798"
                        Canvas.Top="474"
                        Width="229"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
