                    <bdgr:MetroLabel
                        x:Name="TableNameLabel"
                        Canvas.Left="585"
                        Canvas.Top="164"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Table Name"
                        Foreground="{StaticResource BlueBorderBrush}" />

                    <bdgr:MetroTextBox
                        Canvas.Left="585"
                        Canvas.Top="194"
                        Width="190"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap" />

                    <bdgr:MetroLabel
                        x:Name="ColumnNameLabel"
                        Canvas.Left="585"
                        Canvas.Top="241"
                        Width="115"
                        Height="26"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="Column Name"
                        Foreground="{StaticResource BlueBorderBrush}" />

                    <bdgr:MetroTextBox
                        x:Name="ColumnNameTextBox"
                        Canvas.Left="585"
                        Canvas.Top="269"
                        Width="190"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap" />

                    <bdgr:MetroLabel
                        x:Name="DataTypeLabel"
                        Canvas.Left="585"
                        Canvas.Top="323"
                        Width="70"
                        Height="26"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Panel.ZIndex="-3"
                        Content="Data Type"
                        Foreground="{StaticResource BlueBorderBrush}" />

                    <bdgr:MetroComboBox
                        x:Name="ProviderComboBox"
                        Canvas.Left="85"
                        Canvas.Top="98"
                        Width="200"
                        Height="30"
                        Padding="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        AllowMultiSelect="True"
                        DefaultText="Select Provider"
                        Foreground="{StaticResource WhiteForeground}">

                        <bdgr:MetroComboBoxItem
                            Background="{StaticResource ControlInteriorBrush}"
                            Content="SQLite"
                            Tag="SQLite" />

                        <bdgr:MetroComboBoxItem
                            AllowDrop="True"
                            Background="{StaticResource ControlInteriorBrush}"
                            Content="SQL Server"
                            Tag="SqlServer" />

                        <bdgr:MetroComboBoxItem
                            Background="{StaticResource ControlInteriorBrush}"
                            Content="Access"
                            Tag="Access" />

                        <bdgr:MetroComboBoxItem
                            Background="{StaticResource ControlInteriorBrush}"
                            Content="SQL CE"
                            Tag="SqlCe" />

                    </bdgr:MetroComboBox>

                    <bdgr:MetroLabel
                        x:Name="ProviderComboBoxLabel"
                        Canvas.Left="86"
                        Canvas.Top="68"
                        Padding="1,5,5,5"
                        Content="Database:" />
                </Canvas>
            </TabItem>

            <TabItem
                x:Name="SqlTab"
                Width="100"
                Height="24"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="SQL">
                <Canvas
                    x:Name="SqlCanvas"
                    Background="{StaticResource FormBackground}">
                    <sync:EditControl
                        x:Name="Editor"
                        Canvas.Left="23"
                        Canvas.Top="76"
                        Width="990"
                        Height="387"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{StaticResource ControlInteriorBrush}"
                        BorderBrush="{StaticResource BlueBorderBrush}"
                        BorderThickness="1"
                        CaretBrush="{StaticResource YellowForeground}"
                        FontFamily="Source Code Pro"
                        Foreground="{StaticResource FormForeground}"
                        LineNumberAreaBackground="Black"
                        LineNumberAreaWidth="10"
                        LineNumberTextForeground="{StaticResource BrightGreenForeground}"
                        OutliningAreaWidth="3"
                        SelectionBackground="{StaticResource ControlHoverBrush}"
                        Text="Edit Control" />
                </Canvas>
            </TabItem>

            <TabItem
                x:Name="BusyTab"
                Width="100"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Busy"
                IsSelected="False">
                <Canvas
                    x:Name="BusyTabCanvas"
                    Background="{StaticResource FormBackground}">
                    <Image
                        x:Name="PictureBox"
                        Canvas.Left="11"
                        Canvas.Top="6"
                        Width="1002"
                        Height="601"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        gif:AnimationBehavior.SourceUri="/Resources/Assets/LoaderImages/Loading.gif"
                        Stretch="UniformToFill" />
                </Canvas>
            </TabItem>
        </bdgr:MetroTabControl>

        <bdgr:MetroTabControl
            x:Name="SecondaryTabControl"
            Grid.Row="0"
            Canvas.Left="544"
            Canvas.Top="10"
            Width="294"
            Height="670"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <TabItem
                x:Name="SourceTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Source"
                IsSelected="True">

                <Canvas
                    x:Name="SourceCanvas"
                    Height="604"
                    Margin="0,0,8,0"
                    Background="{StaticResource FormBackground}">

                    <bdgr:MetroListBox
                        x:Name="DataSourceListBox"
                        Canvas.Left="29"
                        Canvas.Top="65"
                        Width="200"
                        Height="391"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="{DynamicResource ControlInteriorBrush}"
                        BorderBrush="{DynamicResource ControlInteriorBrush}" />

                    <bdgr:MetroComboBox
                        x:Name="TableComboBox"
                        Canvas.Left="29"
                        Canvas.Top="16"
                        Width="191"
                        Height="30"
                        Padding="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        AllowMultiSelect="False"
                        DefaultText="   Select Model Type">
                        <bdgr:MetroComboBox.Background>
                            <SolidColorBrush Color="{DynamicResource BackColor3}" />
                        </bdgr:MetroComboBox.Background>

                        <bdgr:MetroComboBoxItem
                            Padding="30,1,1,1"
                            Background="{DynamicResource ControlInteriorBrush}"
                            BorderBrush="{DynamicResource ControlInteriorBrush}"
                            Content="Execution"
                            Foreground="{StaticResource LightBlueBrush}"
                            Tag="EXECUTION" />

                        <bdgr:MetroComboBoxItem
                            Padding="30,1,1,1"
                            Background="{DynamicResource ControlInteriorBrush}"
                            BorderBrush="{DynamicResource ControlInteriorBrush}"
                            Content="Reference"
                            Foreground="{StaticResource LightBlueBrush}"
                            Tag="REFERENCE" />

                        <bdgr:MetroComboBoxItem
                            Padding="30,1,1,1"
                            Background="{DynamicResource ControlInteriorBrush}"
                            BorderBrush="{DynamicResource ControlInteriorBrush}"
                            Content="Maintenance"
                            Foreground="{StaticResource LightBlueBrush}"
                            Tag="MAINTENANCE" />

                    </bdgr:MetroComboBox>

                </Canvas>
            </TabItem>

            <TabItem
                x:Name="FilterTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Filter"
                IsSelected="True">
                <Canvas
                    x:Name="FilterGrid"
                    Height="622"
                    Margin="0,0,23,0">
                    <bdgr:MetroListBox
                        x:Name="FirstListBox"
                        Canvas.Left="20"
                        Canvas.Top="86"
                        Width="200"
                        Height="140"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        Background="{StaticResource ControlBackground}"
                        BorderBrush="{StaticResource BlueBorderBrush}"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden" />

                    <bdgr:MetroComboBox
                        x:Name="FirstComboBox"
                        Canvas.Left="20"
                        Canvas.Top="31"
                        Width="200"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AllowMultiSelect="True"
                        DefaultText="ComboBox Items">
                        <sync:ComboBoxItemAdv Content="Item 1" />
                        <sync:ComboBoxItemAdv Content="Item 2" />
                        <sync:ComboBoxItemAdv Content="Item 3" />
                        <sync:ComboBoxItemAdv Content="Item 4" />
                        <sync:ComboBoxItemAdv Content="Item 5" />
                    </bdgr:MetroComboBox>

                    <bdgr:MetroComboBox
                        x:Name="SecondComboBox"
                        Canvas.Left="20"
                        Canvas.Top="261"
                        Width="200"
                        Height="30"
                        AllowMultiSelect="True"
                        DefaultText="ComboBox Items">
                        <sync:ComboBoxItemAdv Content="Item 1" />
                        <sync:ComboBoxItemAdv Content="Item 2" />
                        <sync:ComboBoxItemAdv Content="Item 3" />
                        <sync:ComboBoxItemAdv Content="Item 4" />
                        <sync:ComboBoxItemAdv Content="Item 5" />
                    </bdgr:MetroComboBox>

                    <bdgr:MetroListBox
                        x:Name="SecondListBox"
                        Canvas.Left="20"
                        Canvas.Top="311"
                        Width="200"
                        Height="163"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden" />
                </Canvas>
            </TabItem>

            <TabItem
                x:Name="CommandTab"
                Width="50"
                Height="24"
                Margin="0,0,0,0"
                Padding="6,2,6,5"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                Header="SQL">
                <Canvas
                    x:Name="CommandCanvas"
                    Height="576"
                    Margin="0,0,25,0"
                    Background="{StaticResource FormBackground}">

                    <bdgr:MetroLabel
                        x:Name="CommandLabel"
                        Canvas.Left="28"
                        Canvas.Top="35"
                        Width="170"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="SQL Commands:"
