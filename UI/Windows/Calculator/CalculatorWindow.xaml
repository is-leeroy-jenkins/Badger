<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" x:Name="CalculationView"
        x:Class="Badger.CalculatorWindow" mc:Ignorable="d" Title="Calculator" Height="460"
        Width="410" Background="Black" BorderBrush="#FF0078D4" FontSize="9" Foreground="#FFC5D1DA"
        Topmost="True" BorderThickness="1,1,1,1" WindowStartupLocation="CenterScreen"
        WindowStyle="None">
<Canvas>
<local:MetroCalculator x:Name="Device" Background="Black" Foreground="#FF3399E8"
                       BorderBrush="Black" Height="393" Canvas.Left="10" Canvas.Top="45"
                       Width="380" HorizontalAlignment="Center" VerticalAlignment="Top" />
<Image x:Name="PictureBox" Height="28" Canvas.Left="11" Canvas.Top="7" Width="98"
       Source="/UI/Windows/Calculator/Main.png" HorizontalAlignment="Left" VerticalAlignment="Top"
       ToolTip="Click for more" />
<Image x:Name="CloseButton" Height="24" Canvas.Left="365" Canvas.Top="12" Width="22"
       Source="/UI/Windows/Calculator/Cancel.png" ToolTip="Click to close" />
</Canvas>
</Window>