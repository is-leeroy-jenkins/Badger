<Window x:Class="Badger.PivotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Syncfusion.Windows.Controls;assembly=Syncfusion.Shared.Wpf"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=FluentDark}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Badger"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        x:Name="PivotView"
        mc:Ignorable="d" Title="Pivot Analysis" Height="800"
        Width="1400" Background="#FF141414" BorderBrush="#FF0078D4" FontSize="9"
        Foreground="#FF6ABDFC" WindowStartupLocation="CenterScreen" Margin="1,1,1,1"
        BorderThickness="1,1,1,1" Icon="/Resources/Assets/FormImages/Application.png" MinWidth="200"
        MinHeight="100">
    <Window.ContextMenu>
        <ContextMenu Name="PivotWindowContextMenu">
            <syncfusion:MenuItemAdv Header="File" ToolTip="Browse File System" Click="OnFileMenuOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Folder" ToolTip="Browse Directories"
                                    Click="OnFolderMenuOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FolderItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <Separator />
            <syncfusion:MenuItemAdv Header="Chrome" ToolTip="Launch Chrome Browser"
                                    Click="OnCalculatorMenuOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Edge" ToolTip="Launch Edge Browser"
                                    Click="OnControlPanelOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="FireFox" ToolTip="Launch Firefox Browser"
                                    Click="OnTaskManagerOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <Separator />
            <syncfusion:MenuItemAdv Header="Calculator" ToolTip="Open Calculator"
                                    Click="OnCalculatorMenuOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Control Panel" ToolTip="Windows 10 Control Panel"
                                    Click="OnControlPanelOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Task Manager" ToolTip="Windows 10 Task Manager"
                                    Click="OnTaskManagerOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
            <Separator />
            <syncfusion:MenuItemAdv Header="Close" ToolTip="Exit Application" Click="OnCloseOptionClick">
                <syncfusion:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </syncfusion:MenuItemAdv.Icon>
            </syncfusion:MenuItemAdv>
        </ContextMenu>
    </Window.ContextMenu>
    <Canvas>
        <local:ToolStrip x:Name="Toolbar" Padding="1,1,1,1" Height="40" Width="1400" Canvas.Top="720"
                         Canvas.Left="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <local:ToolStripLabel x:Name="StatusLabel" Content="Date &amp; Time" Width="65"
                                  HorizontalAlignment="Left" Padding="3,1,1,1"
                                  VerticalContentAlignment="Bottom" VerticalAlignment="Bottom" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" />
            <Separator Background="#FF141414" BorderBrush="#FF141414" Width="100" />
            <local:ToolStripButton x:Name="FirstButton" ToolTip="First Record"
                                   ImageSource="/Resources/Assets/ToolStripImages/FirstButton.png" Height="30" />
            <local:ToolStripButton x:Name="PreviousButton" ToolTip="Previous Record"
                                   ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png" Height="30" />
            <local:ToolStripButton x:Name="NextButton" ToolTip="Next Record"
                                   ImageSource="/Resources/Assets/ToolStripImages/NextButton.png" Height="30" />
            <local:ToolStripButton x:Name="LastButton" ToolTip="Last Record"
                                   ImageSource="/Resources/Assets/ToolStripImages/LastButton.png" Height="30" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" />
            <local:ToolStripTextBox x:Name="ToolStripTextBox" HorizontalAlignment="Left" Height="25"
                                    Padding="10,1,1,1" VerticalContentAlignment="Center" Width="200" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" />
            <local:ToolStripButton x:Name="LookupButton" ToolTip="Look Up"
                                   ImageSource="/Resources/Assets/ToolStripImages/LookUpButton.png" Height="30" />
            <local:ToolStripButton x:Name="RefreshButton" ToolTip="Refresh"
                                   ImageSource="/Resources/Assets/ToolStripImages/RefreshButton.png" Height="30" />
            <local:ToolStripButton x:Name="FilterButton" Foreground="#FFA0BDFC" ToolTip="Filters"
                                   ImageSource="/Resources/Assets/ToolStripImages/FilterButton.png" />
            <local:ToolStripButton x:Name="EditButton" ToolTip="Edit"
                                   ImageSource="/Resources/Assets/ToolStripImages/EditButton.png" Height="30" />
            <local:ToolStripButton x:Name="UndoButton" ToolTip="Undo Last"
                                   ImageSource="/Resources/Assets/ToolStripImages/BackButton.png" Height="30" />
            <local:ToolStripButton x:Name="SaveButton" ToolTip="Save"
                                   ImageSource="/Resources/Assets/ToolStripImages/SaveButton.png" Height="30" />
            <local:ToolStripButton x:Name="DeleteButton" ToolTip="Delete"
                                   ImageSource="/Resources/Assets/ToolStripImages/DeleteButton.png" Height="30" />
            <local:ToolStripButton x:Name="ExportButton" ToolTip="Export"
                                   ImageSource="/Resources/Assets/ToolStripImages/ExportButton.png" />
            <local:ToolStripButton x:Name="BrowseButton" ToolTip="Browse"
                                   ImageSource="/Resources/Assets/ToolStripImages/BrowseButton.png" Height="30" />
            <ProgressBar Background="#FF141414" BorderBrush="#FF141414" Width="150" />
            <Separator Background="{x:Null}" BorderBrush="{x:Null}" Width="30" />
            <local:ToolStripButton x:Name="ToggleButton" ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png" />
            <local:ToolStripButton x:Name="MenuButton" ToolTip="Main Menu"
                                   ImageSource="/Resources/Assets/ToolStripImages/MenuButton.png" Height="30" />
        </local:ToolStrip>
        <local:MetroTabControl x:Name="SecondaryTabControl" Height="652" Width="339"
                               HorizontalAlignment="Left" Canvas.Left="1055" Canvas.Top="9"
                               VerticalAlignment="Center">
            <TabItem x:Name="SourceTab" Header="Tables" Background="#FF141414" BorderBrush="#FF141414"
                     Foreground="#FFA0BDFC" Width="60" Margin="0,0,0,0">
                <Canvas x:Name="SourceCanvas" Background="#FF141414" Margin="0,13,0,0">
                    <local:MetroListBox x:Name="DataTableListBox" Height="461" Width="200"
                                        d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center"
                                        Canvas.Top="92" VerticalAlignment="Top" Canvas.Left="46"
                                        RenderTransformOrigin="0.5,0.5">
                        <local:MetroListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform AngleX="0.205" />
                                <RotateTransform />
                                <TranslateTransform X="-0.945" />
                            </TransformGroup>
                        </local:MetroListBox.RenderTransform>
                    </local:MetroListBox>
                    <local:MetroLabel x:Name="SourceLabel" Content="Data Tables" Canvas.Left="46" Canvas.Top="59"
                                      HorizontalAlignment="Center" VerticalAlignment="Top" Width="225"
                                      Foreground="#FF0078D4" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="FilterTab" Header="Filters" Width="60" Background="#FF141414"
                     BorderBrush="#FF141414" Foreground="#FFA0BDFC" Height="22" Margin="0,0,0,0"
                     Padding="6,2,6,2">
                <Canvas x:Name="FilterCanvas" Background="#FF141414">
                    <local:MetroListBox x:Name="SecondCategoryListBox" Height="133" Width="200"
                                        d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center"
                                        VerticalAlignment="Top" Canvas.Left="46" Canvas.Top="429" />
                    <local:MetroListBox x:Name="FirstCategoryListBox" Height="155" Width="200"
                                        d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center"
                                        VerticalAlignment="Top" Canvas.Top="142" Canvas.Left="46"
                                        ScrollViewer.VerticalScrollBarVisibility="Hidden" />
                    <local:MetroComboBox x:Name="FirstCategoryComboBox" Height="35" Width="175" Canvas.Left="41"
                                         Canvas.Top="87">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" />
                    </local:MetroComboBox>
                    <local:MetroComboBox x:Name="SecondCategoryComboBox" Height="35" Width="175" Canvas.Left="46"
                                         Canvas.Top="378" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" />
                    </local:MetroComboBox>
                    <local:MetroLabel x:Name="SecondCategoryLabel" Content="Second Category" Canvas.Left="56"
                                      Canvas.Top="359" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                      Width="200" Foreground="#FF0078D4" Padding="1,1,1,1" />
                    <local:MetroLabel x:Name="FirstCategoryLabel" Content="First Category" Canvas.Left="51"
                                      Canvas.Top="64" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"
                                      Foreground="#FF0078D4" VerticalContentAlignment="Bottom" Padding="1,1,1,1" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="GroupTab" HorizontalAlignment="Center" Height="22" Header="Groups"
                     VerticalAlignment="Center" Width="60" Background="#FF141414" BorderBrush="#FF141414"
                     Foreground="#FFA0BDFC">
                <Grid x:Name="GroupCanvas" Background="#FF141414">
                    <local:MetroLabel x:Name="FieldsLabel" Content="Fields" Width="170" Foreground="#FF0078D4"
                                      HorizontalAlignment="Left" Margin="57,59,0,0" VerticalAlignment="Top" />
                    <local:MetroListBox x:Name="FieldListBox" d:ItemsSource="{d:SampleData ItemCount=5}"
                                        Margin="46,89,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left"
                                        Width="212" Height="220" VerticalAlignment="Top">
                        <local:MetroListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform AngleY="-0.295" />
                                <RotateTransform />
                                <TranslateTransform Y="-1.031" />
                            </TransformGroup>
                        </local:MetroListBox.RenderTransform>
                    </local:MetroListBox>
                    <local:MetroListBox x:Name="NumericListBox" d:ItemsSource="{d:SampleData ItemCount=5}"
                                        Margin="46,359,0,0" HorizontalAlignment="Left" Width="210" Height="220"
                                        VerticalAlignment="Top" />
                    <local:MetroLabel x:Name="NumericsLabel" Content="Numerics" Width="170" Foreground="#FF0078D4"
                                      HorizontalAlignment="Left" Margin="52,329,0,0" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
            <TabItem x:Name="CalendarTab" HorizontalAlignment="Center" Height="22" Header="Calendar"
                     VerticalAlignment="Center" Width="60" Background="#FF141414" BorderBrush="#FF141414"
                     Foreground="#FFA0BDFC">
                <Canvas x:Name="CalendarCanvas" Background="#FF141414" Height="624" VerticalAlignment="Bottom">
                    <local:MetroLabel x:Name="FirstDateLabel" Content="First Date" Canvas.Left="52" Canvas.Top="80"
                                      Width="210" Foreground="#FF0078D4" Padding="1,1,1,1"
                                      VerticalContentAlignment="Bottom" HorizontalAlignment="Left"
                                      VerticalAlignment="Top" />
                    <local:MetroCalendar x:Name="FirstCalendar" Date="1/1/2020" Height="200" Canvas.Left="46"
                                         Canvas.Top="104" Width="220" BorderThickness="1,1,1,1"
                                         HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <local:MetroLabel x:Name="SecondDateLabel" Content="Second Date" Canvas.Left="47" Canvas.Top="329"
                                      Width="220" Panel.ZIndex="-2" Foreground="#FF0078D4" Padding="1,1,1,1"
                                      Grid.IsSharedSizeScope="True" VerticalContentAlignment="Bottom"
                                      HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <local:MetroCalendar x:Name="SecondCalendar" Date="1/1/2020" Height="200" Canvas.Left="46"
                                         Canvas.Top="354" Width="220" BorderThickness="1,1,1,1"
                                         HorizontalAlignment="Left" VerticalAlignment="Top" />
                </Canvas>
            </TabItem>
        </local:MetroTabControl>
        <local:MetroTabControl x:Name="PrimaryTabControl" Height="652" Width="1015"
                               HorizontalAlignment="Left" Canvas.Left="5" Canvas.Top="7"
                               VerticalAlignment="Center">
            <TabItem x:Name="DataTab" Header="Data" Width="100" Margin="0,0,0,0" Background="#FF141414"
                     BorderBrush="#FF141414" Foreground="#FFA0BDFC" Padding="6,2,6,2">
                <Canvas x:Name="PivotCanvas" Background="#FF141414" Margin="0,11,0,0">
                    <local:MetroPivotGrid x:Name="PivotGrid" AllowSelection="True" Height="490" Canvas.Left="24"
                                          ShowGroupingBar="True" ShowSubTotals="True" SortOption="All" Canvas.Top="66"
                                          Width="954" HorizontalAlignment="Left" VerticalAlignment="Center"
                                          BorderThickness="1,1,1,1" GroupingBarItemForeground="#FF6ABDFC"
                                          GroupingBarBackground="#FF052C4A" GroupingBarItemBackground="#FF2F8AD0"
                                          GroupingBarItemBorderBrush="#FFF9F5F5"
                                          GroupingButtonHoverBackgroundBrush="#FF0078D4"
                                          GroupingButtonHoverBorderBrush="#FFA0BDFC"
                                          GroupingButtonHoverForeground="#FFFBF9F9" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="ChartTab" Height="22" Header="Chart" Width="100" Background="#FF141414"
                     BorderBrush="#FF141414" Foreground="#FFA0BDFC" Margin="0,0,0,0">
                <Canvas x:Name="ChartCanvas" Background="#FF141414">
                    <syncfusion:SfChart x:Name="Chart" Canvas.Left="102" Canvas.Top="100" Height="435" Width="715" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="BusyTab" Header="Busy" Width="100" Background="#FF141414" BorderBrush="#FF141414"
                     Foreground="#FFA0BDFC" Margin="0,0,0,0">
                <Canvas Background="#FF141414">
                    <Canvas Background="#FF141414" Height="626" Width="1024" RenderTransformOrigin="0.517,0.505">
                        <Image x:Name="Loader" Height="600" Canvas.Left="19" Canvas.Top="16" Width="980"
                               HorizontalAlignment="Center" VerticalAlignment="Top"
                               gif:ImageBehavior.AnimatedSource="/UI/Windows/Pivot/Loading.gif" Stretch="UniformToFill" />
                    </Canvas>
                </Canvas>
            </TabItem>
        </local:MetroTabControl>
    </Canvas>
</Window>